<GridLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="3"
    tools:context=".GridLayoutActivity" >

    <Button
        android:id="@+id/cancelPumpButton"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/textViewSetPumpTimes"
        android:layout_width="fill_parent"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="0"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <NumberPicker
        android:id="@+id/np"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_width="80dp" />

    <Button
        android:id="@+id/confirmPumpButton"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="@string/confirm" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:layout_width="240dp"
    	android:layout_height="wrap_content"
    	android:entries="@array/pump_arrays"
        android:prompt="@string/pump_prompt" />

</GridLayout>